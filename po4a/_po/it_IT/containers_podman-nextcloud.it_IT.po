#. type: Fenced code block
#: ../src/docs/guides/containers/podman-nextcloud.md:217
#, no-wrap
msgid ""
"FROM localhost/base\n"
"RUN yum -y install mysql\n"
"WORKDIR /root\n"
"COPY db-drop.sh db-drop.sh\n"
"COPY db-create.sh db-create.sh\n"

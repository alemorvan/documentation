#: ../src/docs/guides/containers/podman-nextcloud.md:104
msgid "And make a file called DockerFile. Yes, Podman uses them too."
msgstr ""

#. type: Fenced code block (bash)
#: ../src/docs/guides/containers/podman-nextcloud.md:105
#: ../src/docs/guides/containers/podman-nextcloud.md:211
#: ../src/docs/guides/containers/podman-nextcloud.md:356
#, no-wrap
msgid "vi Dockerfile\n"
msgstr ""

#. type: Plain text
#: ../src/docs/guides/containers/podman-nextcloud.md:110
msgid "Copy and paste the following text into your brand new DockerFile."
msgstr ""

#. type: Fenced code block
#: ../src/docs/guides/containers/podman-nextcloud.md:111
#, no-wrap
msgid ""
"FROM rockylinux/rockylinux:latest\n"
"ENV container docker\n"
"RUN yum -y install epel-release ; yum -y update\n"
"RUN dnf module enable -y php:7.4\n"
"RUN dnf install -y php\n"
"RUN yum install -y bzip2 unzip lsof wget traceroute nmap tcpdump bridge-utils ; yum -y update\n"
"RUN (cd /lib/systemd/system/sysinit.target.wants/; for i in *; do [ $i == \\\n"
"systemd-tmpfiles-setup.service ] || rm -f $i; done); \\\n"
"rm -f /lib/systemd/system/multi-user.target.wants/*;\\\n"
"rm -f /etc/systemd/system/*.wants/*;\\\n"
"rm -f /lib/systemd/system/local-fs.target.wants/*; \\\n"
"rm -f /lib/systemd/system/sockets.target.wants/*udev*; \\\n"
"rm -f /lib/systemd/system/sockets.target.wants/*initctl*; \\\n"
"rm -f /lib/systemd/system/basic.target.wants/*;\\\n"
"rm -f /lib/systemd/system/anaconda.target.wants/*;\n"
"VOLUME [ \"/sys/fs/cgroup\" ]\n"
"CMD [\"/usr/sbin/init\"]\n"
msgstr ""


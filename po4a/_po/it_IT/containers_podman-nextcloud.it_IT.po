#: ../src/docs/guides/containers/podman-nextcloud.md:178
#, no-wrap
msgid "vi db-create.sh\n"
msgstr ""

#. type: Plain text
#: ../src/docs/guides/containers/podman-nextcloud.md:183
msgid ""
"Now copy and paste the following code into that file, using your favorite "
"text editor:"
msgstr ""

#. type: Fenced code block
#: ../src/docs/guides/containers/podman-nextcloud.md:184
#, no-wrap
msgid ""
"#!/bin/bash\n"
"mysql -h 10.1.1.160 -u root -p rockylinux << eof\n"
"create database ncdb;\n"
"grant all on ncdb.* to 'nc-user'@'10.1.1.160' identified by 'nc-pass';\n"
"flush privileges;\n"
"eof\n"
msgstr ""

#. type: Plain text
#: ../src/docs/guides/containers/podman-nextcloud.md:194
msgid ""
"Save and close, then repeat the steps with the script for deleting databases "
"as needed:"
msgstr ""

#. type: Fenced code block (bash)
#: ../src/docs/guides/containers/podman-nextcloud.md:195
#, no-wrap
msgid "vi db-drop.sh\n"
msgstr ""

#. type: Plain text
#: ../src/docs/guides/containers/podman-nextcloud.md:200
msgid "Copy and paste this code into the new file:"

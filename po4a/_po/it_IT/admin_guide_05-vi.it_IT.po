#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:501
#, no-wrap
msgid "`:q!`\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:503
#, no-wrap

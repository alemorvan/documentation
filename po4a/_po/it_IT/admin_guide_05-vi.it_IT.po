#. type: Title ###
#: ../src/docs/books/admin_guide/05-vi.md:374
#, no-wrap
msgid "Search for a string"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:377
#, no-wrap
msgid "Search for a string from the cursor:\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:379
#, no-wrap
msgid "`/string`\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:381
#, no-wrap
msgid "Search for a string before the cursor:\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:383
#, no-wrap
msgid "`?string`\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:385
#, no-wrap
msgid "Find the next matching string:\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:387
#, no-wrap
msgid "<kbd>n</kbd>\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:389
#, no-wrap
msgid "Find the previous matching string:\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:391
#, no-wrap
msgid "<kbd>N</kbd>\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:393
#, no-wrap
msgid "There are wildcards to facilitate the search in VI.\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:395
#, no-wrap
msgid "`[]` : Searches for a range of characters or a single character whose possible values are specified.\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:399
#, no-wrap
msgid "`/[Ww]ord` : search _word_ or _Word_\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:401
#, no-wrap
msgid "`/[1-9]word` : search _1word_, _2word_ … _`x`word_  where `x` is a number\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:403
#, no-wrap
msgid "`^` : Search for lines that begin with a characters.\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:407
#, no-wrap
msgid "`/^Word`\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:409
#, no-wrap
msgid "`$` : Search for lines that end with characters.\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:413
#, no-wrap
msgid "`/Word$`\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:415
#, no-wrap
msgid "`.` : Search for any single character except newline characters.\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:419
#, no-wrap
msgid "`/W.rd` : search _Word_, _Ward_ …\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:421
#, no-wrap
msgid "`*` : The number of times the previous character matches, 0 times, or any number of times.\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:425
#, no-wrap
msgid "`/W*d`\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:427
#, no-wrap
msgid "**Note:** If you want to ignore case (temporary) when matching strings, Please type the `:set ic`. \n"
msgstr ""

#. type: Title ###
#: ../src/docs/books/admin_guide/05-vi.md:428
#, no-wrap
msgid "Replace a string"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:431
#, no-wrap
msgid "From the 1st to the last line of the text, replace the searched string by the specified string:\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:433
#, no-wrap
msgid "`:1,$ s/search/replace`\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:435
#, no-wrap
msgid "**Note:** You can also use `:0,$s/search/replace` to specify starting at the absolute beginning of the file.\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:437
#, no-wrap
msgid "From line `n` to line `m`, replace the searched string with the specified string:\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:439
#, no-wrap
msgid "`:n,m s/search/replace`\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:441
#, no-wrap
msgid "By default, only the first occurrence found of each line is replaced. To force the replacement of each occurrence, you have to add `/g` at the end of the command:\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:443
#, no-wrap
msgid "`:n,m s/search/replace/g`\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:445
#, no-wrap
msgid "Browse an entire file to replace the searched string with the specified string:\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:447
#, no-wrap
msgid "`:% s/search/replace`\n"
msgstr ""

#. type: Title ###
#: ../src/docs/books/admin_guide/05-vi.md:448
#, no-wrap
msgid "Deletes the specified row"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:451
#, no-wrap
msgid "Delete a blank line\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:453
#, no-wrap
msgid "`:g/^$/d`\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:455
#, no-wrap
msgid "Delete lines with line numbers n to m\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:457
#, no-wrap
msgid "`:n,md`\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:459
#, no-wrap
msgid "Delete the line on which the string is located\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:461
#, no-wrap
msgid "`:g/string/d`\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:463
#, no-wrap
msgid "Delete a line that does not contain a string\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:465
#, no-wrap
msgid "`:g!/string/d`\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:467
#, no-wrap
msgid "Delete all lines that begin with #\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:469
#, no-wrap
msgid "`:g/^#/d`\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:471
#, no-wrap
msgid "The **g** here stands for **global**.\n"
msgstr ""

#. type: Title ###

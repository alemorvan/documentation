#. type: Plain text
#: ../src/docs/books/admin_guide/06-users.md:70
#, no-wrap
msgid "The `groupadd` command adds a group to the system.\n"
msgstr ""

#. type: Fenced code block
#: ../src/docs/books/admin_guide/06-users.md:70
#, no-wrap
msgid "groupadd [-f] [-g GID] group\n"
msgstr ""

#. type: Fenced code block
#: ../src/docs/books/admin_guide/06-users.md:76

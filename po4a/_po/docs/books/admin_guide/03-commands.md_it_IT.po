#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/03-commands.md:580
msgid "Sort by file size, largest first:"
msgstr ""

#. type: Fenced code block (bash)
#: ../src/docs/books/admin_guide/03-commands.md:581
#, no-wrap
msgid "$ ls -lhS\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/03-commands.md:586
msgid "time/date format with `-l`:"

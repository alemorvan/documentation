msgstr ""

#. type: Title ###
#: ../src/docs/books/admin_guide/03-commands.md:610
#, no-wrap
msgid "`mkdir` command"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/03-commands.md:613
msgid "The `mkdir` command creates a directory or directory tree."
msgstr ""

#. type: Fenced code block (bash)
#: ../src/docs/books/admin_guide/03-commands.md:614
#, no-wrap

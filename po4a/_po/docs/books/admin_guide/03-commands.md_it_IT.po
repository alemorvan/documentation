#: ../src/docs/books/admin_guide/03-commands.md:1543
msgid "`extract` function"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/03-commands.md:1545
msgid "Extract any type of archive:"
msgstr ""

#. type: Fenced code block (bash)
#: ../src/docs/books/admin_guide/03-commands.md:1546
#, no-wrap
msgid ""
"extract () {\n"
"  if [ -f $1 ] ; then\n"
"    case $1 in\n"
"      *.tar.bz2) tar xjf $1 ;;\n"
"      *.tar.gz) tar xzf $1 ;;\n"
"      *.bz2) bunzip2 $1 ;;\n"
"      *.rar) unrar e $1 ;;\n"
"      *.gz) gunzip $1 ;;\n"
"      *.tar) tar xf $1 ;;\n"
"      *.tbz2) tar xjf $1 ;;\n"
"      *.tgz) tar xzf $1 ;;\n"
"      *.zip) unzip $1 ;;\n"
"      *.Z) uncompress $1 ;;\n"
"      *.7z) 7z x $1 ;;\n"
"      *)\n"
"        echo \"'$1' cannot be extracted via extract()\" ;;\n"
"    esac\n"
"  else\n"
"    echo \"'$1' is not a valid file\"\n"
"  fi\n"
"}\n"
"\n"
msgstr ""


#. type: Fenced code block (bash)
#: ../src/docs/books/admin_guide/03-commands.md:1463
#, no-wrap
msgid ""
"$ alias\n"
"alias l.='ls -d .* --color=auto'\n"
"alias ll='ls -l --color=auto'\n"
"alias ls='ls --color=auto'\n"
"alias vi='vim'\n"
"alias which='alias | /usr/bin/which --tty-only --read-alias --show-dot --show-tilde'\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/03-commands.md:1473
msgid ""
"The aliases are only defined temporarily, for the time of the user session."

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/10-boot.md:418
msgid "warning (4),"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/10-boot.md:418
msgid "err (3),"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/10-boot.md:418
msgid "crit (2),"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/10-boot.md:418
msgid "alert (1),"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/10-boot.md:418
msgid "and emerg (0)."

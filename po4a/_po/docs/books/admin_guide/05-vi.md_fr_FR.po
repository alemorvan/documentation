#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:465
msgid "`:g!/string/d`"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:467
msgid "Delete all lines that begin with #"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:469
msgid "`:g/^#/d`"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:471
msgid "The **g** here stands for **global**."
msgstr ""


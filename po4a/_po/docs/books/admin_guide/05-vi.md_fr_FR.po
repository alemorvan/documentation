msgstr ""

#. type: Title ###
#: ../src/docs/books/admin_guide/05-vi.md:374
#, no-wrap
msgid "Search for a string"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:377
msgid "Search for a string from the cursor:"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:379
msgid "`/string`"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:381
msgid "Search for a string before the cursor:"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:383
msgid "`?string`"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:385
msgid "Find the next matching string:"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:387
#, no-wrap
msgid "<kbd>n</kbd>\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:389
msgid "Find the previous matching string:"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:391
#, no-wrap
msgid "<kbd>N</kbd>\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:393
msgid "There are wildcards to facilitate the search in VI."
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:395
msgid ""
"`[]` : Searches for a range of characters or a single character whose "
"possible values are specified."
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:399
msgid "`/[Ww]ord` : search _word_ or _Word_"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:401
msgid ""
"`/[1-9]word` : search _1word_, _2word_ Ã¢ÂÂ¦ _`x`word_ where `x` is a number"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:403
msgid "`^` : Search for lines that begin with a characters."
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:407
msgid "`/^Word`"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:409
msgid "`$` : Search for lines that end with characters."
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:413
msgid "`/Word$`"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:415
msgid "`.` : Search for any single character except newline characters."
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:419
msgid "`/W.rd` : search _Word_, _Ward_ Ã¢ÂÂ¦"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:421
msgid ""
"`*` : The number of times the previous character matches, 0 times, or any "
"number of times."
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:425
msgid "`/W*d`"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:427
#, no-wrap
msgid "**Note:** If you want to ignore case (temporary) when matching strings, Please type the `:set ic`. \n"
msgstr ""

#. type: Title ###
#: ../src/docs/books/admin_guide/05-vi.md:428
#, no-wrap
msgid "Replace a string"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:431
msgid ""
"From the 1st to the last line of the text, replace the searched string by "
"the specified string:"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:433
msgid "`:1,$ s/search/replace`"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:435
#, no-wrap
msgid "**Note:** You can also use `:0,$s/search/replace` to specify starting at the absolute beginning of the file.\n"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:437
msgid ""
"From line `n` to line `m`, replace the searched string with the specified "
"string:"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:439
msgid "`:n,m s/search/replace`"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:441
msgid ""
"By default, only the first occurrence found of each line is replaced. To "
"force the replacement of each occurrence, you have to add `/g` at the end of "
"the command:"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:443
msgid "`:n,m s/search/replace/g`"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:445
msgid ""
"Browse an entire file to replace the searched string with the specified "
"string:"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:447
msgid "`:% s/search/replace`"
msgstr ""

#. type: Title ###
#: ../src/docs/books/admin_guide/05-vi.md:448
#, no-wrap
msgid "Deletes the specified row"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:451

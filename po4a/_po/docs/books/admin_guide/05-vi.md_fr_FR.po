#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:453
msgid "`:g/^$/d`"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:455
msgid "Delete lines with line numbers n to m"

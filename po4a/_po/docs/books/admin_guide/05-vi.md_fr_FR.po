#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:457
msgid "`:n,md`"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:459
msgid "Delete the line on which the string is located"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/05-vi.md:461
msgid "`:g/string/d`"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/05-vi.md:463
msgid "Delete a line that does not contain a string"

"---\n"
"- name: Test my role\n"
"  hosts: localhost\n"
"  vars:\n"
"    rocky8_remove_packages:\n"
"      - cockpit\n"
"\n"
"  roles:\n"
"\n"
"    - role: rocky8\n"
"      become: true\n"
"      become_user: root\n"

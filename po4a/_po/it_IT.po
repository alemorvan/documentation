msgstr ""

#. type: Plain text
#: ../src/docs/labs/security/lab9-cryptography.md:806
#, no-wrap
msgid "Enter a very good passphrase when prompted - i.e. one that is difficult to guess.\n"
msgstr ""

#. type: Plain text
#: ../src/docs/labs/security/lab9-cryptography.md:808
#, no-wrap
msgid "Created directory '/home/ying/.ssh'.\n"
msgstr ""

#. type: Plain text
#: ../src/docs/labs/security/lab9-cryptography.md:810
#, no-wrap
msgid "Enter passphrase (empty for no passphrase): \\*\\*\\*\\*\\*\\*\\*\\*\\*\n"
msgstr ""

#. type: Plain text

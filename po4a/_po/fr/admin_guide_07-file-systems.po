msgid "Default rights and mask"
msgstr ""

#. type: Plain text
#: ../src/docs/books/admin_guide/07-file-systems.md:957
#, no-wrap
msgid "When a file or directory is created, it already has permissions.\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/07-file-systems.md:960
#, no-wrap
msgid "For a directory: `rwxr-xr-x` or _755_.\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/admin_guide/07-file-systems.md:960
#, no-wrap

msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/learning_ansible/01-basic.md:49
#, no-wrap
msgid "configuration management,\n"
msgstr ""

#. type: Bullet: '* '
#: ../src/docs/books/learning_ansible/01-basic.md:49
#, no-wrap
